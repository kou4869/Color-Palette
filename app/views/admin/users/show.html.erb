<div class="admin_user_show">
  <div class="container-fluid mt-3 px-5">
    <div class="row">

      <div class="col-12 col-md-3">
        <h3><b>【<%= @user.name %>さんの詳細】</b></h3>
        <div class="text-center pt-3">
          <%= image_tag @user.get_profile_image, width: 200 %>
        </div>

        <%= form_with model: @user, url: admin_user_path, method: :patch do |user| %>
          <div class="form-group text-center pt-2">
            <%= user.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>

          <div class="form-group">
            <b><%= user.label :name %></b>
            <%= user.text_field :name, class: "form-control", placeholder: "ニックネームを変更" %>
          </div>

          <div class="form-group">
            <b><%= user.label :introduction %></b>
            <%= user.text_area :introduction, class: "form-control",  placeholder: "自己紹介を入力してください" %>
          </div>

          <div class="form-group text-center pt-2">
            <%= user.submit class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>