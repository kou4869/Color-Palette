<div class="admin_user_show">
  <div class="container-fluid mt-3 px-5">
    <div class="row">

      <div class="col-12 col-md-3">
        <h3><b>【<%= @user.name %>さんの詳細】</b></h3>
        <div class="text-center pt-3">
          <%= image_tag @user.get_profile_image, width: 200 %>
        </div>

        <%= form_with model: @user, url: admin_user_path, method: :patch do |user| %>
          <div class="form-group text-center pt-2">
            <%= user.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>

          <div class="form-group">
            <b><%= user.label :name %></b>
            <%= user.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <b><%= user.label :introduction %></b>
            <%= user.text_area :introduction, class: "form-control" %>
          </div>

          <div class="form-group text-center pt-2">
            <%= user.submit class: 'btn btn-success' %>
            <%= link_to "退会", admin_user_path(@user), method: :delete, data: { confirm: '本当に退会処理を行いますか？' }, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>

      <div class="col-12 col-md-9">
        <h3><b>【 配色一覧 】</b></h3>
        
        <div class="mt-3">
          <!--↓ トップに戻る用のid-->
          <%= link_to posts_path do %>
            <span id="page_top"></span>
          <% end %>
  
          <div class="index_list">
            <div class="card-deck">
              <% @posts.each do |post| %>
                <div class="col-12 col-md-3">
                  <%= render 'admin/posts/index', post: post %>
                </div>
              <% end %>
            </div>
          </div>
            
        </div>
      </div>

    </div>
  </div>
</div>