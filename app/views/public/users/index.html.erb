<div class="posts_index">
  <div class ="container-fluid mt-3 px-5">
    <div class="row">
      <div class="col-12 col-md-2 mb-3">
        <h2>User info</h2>
        <%= render 'public/users/public_sidebar', user: @user %>
      </div>

      <div class="col-12 col-md-10">
        <div class="row">
          <h2 class="pl-3">【 <%= @user.name %>さんの投稿一覧 】</h2>
        </div>
        
        <div claas="row">
          <div class="searche pl-2">
            <%= render 'public/users/users_index_searche', posts: @posts, user: @user %>
          </div>
        </div>
        
        <div class="mt-3">
          <!--↓ トップに戻る用のid-->
          <%= link_to user_my_page_path(@user) do %>
            <span id="page_top"></span>
          <% end %>
        
          <div class="index_list">
            <div class="card-deck mt-3">
              <% @posts.each do |post| %>
                <div class="col-12 col-md-3">
                <%= render 'public/posts/index', post: post %>
              </div>
              <% end %>
            </div>
          </div>
          
          <%= paginate @posts %>
          
      </div>
      
    </div>
  </div>
</div>