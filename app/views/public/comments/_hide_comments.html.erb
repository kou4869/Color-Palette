<div class="row d-flex align-items-center pb-3">
  <div class="col-12">
    <% if comment.user.profile_image? %>
      <%= link_to image_tag(comment.user.profile_image.thumb.url), user_path(comment.user.id) %>
    <% else %>
      <%= link_to image_tag('no_profile_img.png'), user_path(comment.user.id) %>
    <% end %>
    <%= link_to "#{comment.user.name}さん", user_path(comment.user.id), class: 'link pl-1' %>
  </div>
  <div class="col-12 d-flex justify-content-end">
    <%= comment.created_at.strftime('%Y/%m/%d') %>
  </div>
</div>

# コメントの表示
<div class="card-body border rounded mb-3">
  <%= comment.comment %>
</div>
<hr class="d-none">
  <% if comment.user == current_user %>
    <%= link_to post_comment_path(comment.post_id, comment.id), method: :delete, remote: true do %>
      <div class="text-right">
        <button class="btn btn-outline-secondary">
          削除する
        </button>
      </div>
    <% end %>
  <% end %>
</hr>