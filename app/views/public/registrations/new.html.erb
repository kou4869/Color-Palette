<div class="public-registrations">
  <div class="container signin_container mt-2 mb-4">
    <div class="row px-5">
      <div class="col-12 col-md-12">

        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row my-2">
          <h2 class="user_signin"><strong>
          <i class="fas fa-paint-roller"></i> Sign in <i class="fas fa-paint-roller"></i>
          </strong></h2>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row mb-3">
            <p><b>"Name(ニックネーム)"</b>は<br>
                2文字以上、10文字以内で入力してください。このニックネームはホームページ上で公開されます。<br>
                (登録後、何度でも変更可能です)</p>
          </div>

          <div class="row mb-1">
            <div class="field">
              <b><%= f.label :"Name(ニックネーム)" %></b><br>
              <%= f.text_field :name, size: 25, class: "textlines-radius" %>
            </div>
          </div>

          <div class="row mb-1">
            <div class="field">
              <b><%= f.label :"email(メールアドレス)" %></b><br>
              <%= f.email_field :email, autofocus: true,  size: 25, autocomplete: "email", class: "textlines-radius" %>
            </div>
          </div>

          <div class="row mb-1">
            <div class="field">
              <b><%= f.label :"password(パスワード)" %></b>
              <% if @minimum_password_length %>
              <em>（半角英数字<%= @minimum_password_length %> 文字以上）</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", size: 25, class: "textlines-radius" %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="field">
              <b><%= f.label :"password(確認用パスワード))" %></b><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "textlines-radius" %>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-12 col-md-6 mb-2">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
            <div class="col-12 col-md-6 mb-2">
              <%= render "public/shared/links" %>
            </div>
          </div>

        <% end %>


        <!--↓ トップに戻る用のid-->
        <a href="#" id="page_top"></a>

      </div>
    </div>
  </div>
</div>
