<div class="public-registrations">
  <div class="container">
    <div class="row pb-3">
        <h2>Sign in</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="row pb-1">
        <div class="field">
          <%= f.label :"ニックネーム" %><br />
          <%= f.text_field :name, size: 25, class: "textlines-radius" %>
        </div>
      </div>

      <div class="row pb-1">
        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true,  size: 25, autocomplete: "email", class: "textlines-radius" %>
        </div>
      </div>

      <div class="row pb-1">
        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>（半角英数字<%= @minimum_password_length %> 文字以上）</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: 25, class: "textlines-radius" %>
        </div>
      </div>

      <div class="row pb-3">
        <div class="field">
          <%= f.label :"パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "textlines-radius" %>
        </div>
      </div>

      <div class="row pb-3">
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>

    <%= render "public/shared/links" %>

  </div>
</div>
