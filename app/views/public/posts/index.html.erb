<div class="posts_index">
  <div class ="container-fluid mt-3 px-5">
    
    <div class="row">
      <% if user_signed_in? %>
      
        <div class="col-12 col-md-2 user_info mb-3">
          <h2 class="user_title text-center">User info</h2>
          <%= render 'public/users/public_sidebar', user: @user %>
        </div>
  
        <div class="col-12 col-md-10">
          <div class="row index-text pl-3">
            <% if @tag_name.present? %>
              <h2 class="font_kaushan"><strong>【 <%= @tag_name %>の配色一覧 】</strong></h2>
            <% else %>
              <h2 class="font_kaushan"><strong>【 配色一覧 】</strong></h2>
            <% end %>
          </div>
  
          <div claas="row">
            <div class="searche pl-2">
              <%= render 'public/posts/posts_searche', posts: @posts %>
            </div>
          </div>
  
          <div class="mt-3">
            <!--↓ トップに戻る用のid-->
            <%= link_to posts_path do %>
              <span id="page_top"></span>
            <% end %>
  
            <div class="index_list">
              <div class="card-deck">
                <% @posts.each do |post| %>
                  <div class="col-12 col-md-3">
                    <%= render 'public/posts/index', post: post %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <%= paginate @posts %>
            
          </div>
        </div>
        
      <% else %>
      
        <%= render partial: 'public/posts/no_sign_in_index', locals: { tag_name: @tag_name, posts: @posts } %> 
        
      <% end %>
    </div>
    
  </div>
</div>


