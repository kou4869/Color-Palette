<div class="posts_index">
  <div class ="container-fluid mt-3 px-5">
    <div class="row">
      <div class="col-12 col-md-2 mb-3">
        <h2>User info</h2>
        <%= render 'public/users/public_sidebar', user: @user %>
      </div>

      <div class="col-11 col-md-10 offset-1 offset-md-0">
        <div class="index-text pl-3">
          <h2>配色一覧</h2>
          <h5>
          <%= link_to "昇順", posts_path(latest: "true") %>
          | <%= link_to "降順", posts_path(old: "true") %>
          </h5>
        </div>
        <div class="row">
          <div class="card-deck">
            <% @posts.each do |post| %>
            <div class="col-12 col-md-3 offset-1 offset-md-0">
              <%= render 'public/posts/index', post: post %>
            </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
