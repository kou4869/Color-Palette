<div class="posts_index">
  <div class ="container-fluid px-5">
    <div class="row">
      <div class="col-12 col-md-2 mb-3">
        <h2>User info</h2>
        <%= render 'public/users/public_sidebar', user: @user %>
      </div>

      <div class="col-11 col-md-10 offset-1 offset-md-0 pl-2">
         <% @posts.each do |post| %>
            <%= render 'public/posts/index', post: post %>
         <% end %>
      </div>
    </div>
  </div>
</div>
