<div class="posts-new">
    <div class="container-fluid px-5">
      <h2><strong>新規配色投稿</strong></h2>

      <div class="row py-3">
        <div class="col-md-4">

          # ひし形に設定のため1→2→4→3の順にidを付属
          <div class="big_diamond"> 
            <div class="square" id="color1">
              <div class="text_box">
                <p class="text-color-y">color 1</p>
              </div>
            </div>
            <div class="square" id="color2">
              <div class="text_box">
                <p class="text-color-x">color 2</p>
              </div>
            </div>
            <div class="square" id="color4">
              <div class="text_box">
                <p class="text-color-x">color 4</p>
              </div>     
            </div>
            <div class="square" id="color3">
              <div class="text_box">
                <p class="text-color-y">color 3</p>
              </div>              
            </div>
          </div>
        </div>
          
        <div class="col-md-7 offset-md-1 mt-5">
        <%= form_with model: @post do |form| %>
          <div class="row">
            <div class="col-md-4">

              <div class="form-group">
                <%= form.label :"color 1" %>
                <input type="color" class="form-control" id="color1"  value="#ff4500">
              </div>
              <div class="form-group">
                <%= form.label :"color 2" %>
                <input type="color" class="form-control" id="color2"  value="#ffd700">
              </div>
              <div class="form-group">
                <%= form.label :"color 3" %>
                <input type="color" class="form-control" id="color3"  value="#2e8b57">
              </div>
              <div class="form-group">
                <%= form.label :"color 4" %>
                <input type="color" class="form-control" id="color3"  value="#00bfff">
              </div>

            </div>

            <div class="col-md-8 pl-5">
              <div class="form-group has-error">
                <b><%= form.label :"配色の説明" %></b>
                <%= form.text_area :post_introduction, class: "form-control",  rows: "5", placeholder: "配色のポイントや紹介などをご記入ください" %>
              </div>
              <%= form.submit class: 'btn btn-primary' %>
            </div>
            
        <% end %>
        </div>


      </div>

    </div>
</div>


<script>
$(document).ready(function() {
  $("#color1, #color2, #color3, #color4").on("change", function() {
    var color = $(this).val();
    $(this).siblings(".square").css("background-color", color);
  });
});
</script>